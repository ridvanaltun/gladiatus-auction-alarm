{
  "name": "Gladiatus Auction Alarm",
  "version": "1.0.0",
  "description": "Set an alarm for Gladiatus Auction.",
  "author": "Ridvan Altun",
  "update_url": "https://raw.githubusercontent.com/ridvanaltun/gladiatus-auction-alarm/master/updates.xml",
  "homepage_url": "https://github.com/ridvanaltun/gladiatus-auction-alarm/",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "page_action" :
  {
    "default_icon" : "passive.png",
    "default_title" : "PASSIVE"
  },
  "permissions" : [
    "declarativeContent",
    "tabs",
    "webNavigation",
    "management",
    "http://*.gladiatus.gameforge.com/*",
    "https://*.gladiatus.gameforge.com/*"
  ],
  "icons" : {
    "48" : "icon48.png",
    "128" : "icon128.png"
  },
  "commands": {
    "Ctrl+M": {
      "suggested_key": {
        "default": "Ctrl+M",
        "mac": "Command+M"
      },
      "description": "Ctrl+M."
    }
  },
  "web_accessible_resources": [
    "img/*",
    "scripts/*"
  ],
  "manifest_version": 2
}
